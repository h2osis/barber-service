<div class="portlet-title">
    <div class="caption">
        <i class="icon-bag font-red-sunglo"></i>
        <span class="caption-subject font-red-sunglo">Услуги</span>
    </div>
    <div class="actions">
        {{ticket-direction-btn direction="left" elemSelector="#ticket-master" stepSelector="#master-step"}}
        {{ticket-direction-btn direction="right" elemSelector="#ticket-date" stepSelector="#date-step"}}
    </div>
</div>
<div class="portlet-body ticket-portlet-body">
    <div class="tiles">
        {{#each services as |service|}}
            {{ticket-services-item service=service}}
        {{/each}}
    </div>
</div>