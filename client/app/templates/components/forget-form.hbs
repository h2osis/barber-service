<!-- BEGIN FORGOT PASSWORD FORM -->
<form {{action 'forget' on='submit'}}>
    <h3>Forget Password ?</h3>
    <p> Enter your phone below to reset your password. </p>
    <div class="form-group">
        <div class="input-icon">
            <i class="fa fa-mobile"></i>
            <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Phone" name="tel" /> </div>
    </div>
    <div class="form-actions">
        <button type="button" class="btn red btn-outline" {{action 'showLoginForm'}}>Back </button>
        <button type="submit" class="btn green pull-right"> Submit </button>
    </div>
</form>
<!-- END FORGOT PASSWORD FORM -->