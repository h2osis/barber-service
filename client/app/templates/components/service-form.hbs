<form class="form-horizontal" {{action 'save' on='submit'}}>
    <div class="form-body">
        <div class="form-group">
            <label class="col-sm-4 control-label">
                Название
                <span class="required" aria-required="true"> * </span>
            </label>
            <div class="col-sm-8">
                {{input name="name" 
                class="form-control" 
                value=service.name
                focus-out=(action (mut showNameError) true)}}
                {{#if showNameError}}
                    <small class="help-block">
                        {{v-get service 'name' 'message'}}
                    </small>
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">
                Мастера
                <span class="required" aria-required="true"> * </span>
            </label>
            <div class="col-sm-8">
                <select class="select2 form-control" multiple="multiple" name="masters" onchange= {{action "selectMaster" value="target.value"}} style="width: 100%;">
                    {{#each masters as |master|}}
                        {{#each service.masters as |serviceMaster|}}
                            {{#if (eq master.id serviceMaster.id) }}
                                <option value="{{master.id}}" selected="selected">
                                    {{master.fullname}}
                                </option>
                            {{else}}
                                <option value="{{master.id}}">
                                    {{master.fullname}}
                                </option>
                            {{/if}}
                        {{/each}}
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">&nbsp;</label>
            <div class="col-sm-8">
                <label class="mt-checkbox">
                    Сделать подуслугой {{input type="checkbox" checked=service.partOfList name="partOfList"}}
                    <span></span>
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">
                Стоимость
                <span class="required" aria-required="true"> * </span>
            </label>
            <div class="col-sm-8">
                {{input name="cost" 
                class="form-control"  
                value=service.cost
                focus-out=(action (mut showCostError) true)}}
                {{#if showCostError}}
                    <small class="help-block">
                        {{v-get service 'cost' 'message'}}
                    </small>
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">
                Продолжительность
                <span class="required" aria-required="true"> * </span>
            </label>
            <div class="col-sm-8">
                {{input name="time" 
                class="form-control"  
                value=service.time
                focus-out=(action (mut showTimeError) true)}}
                {{#if showTimeError}}
                    <small class="help-block">
                        {{v-get service 'time' 'message'}}
                    </small>
                {{/if}}
            </div>
        </div>
    </div>
    <div class="form-actions">
        <div class="row">
            <div class="col-sm-offset-4 col-sm-8">
                {{input 
                    class="btn btn-success" 
                    type="submit" 
                    value="Сохранить"
                    disabled=(v-get service 'isInvalid')}}
                {{#link-to "service.index" class="btn btn-default" }}
                    <i class="fa fa-arrow-left"></i> Назад
                {{/link-to}}
            </div>
        </div>
    </div>
</form>