<form class="form-horizontal" {{action 'save' on='submit'}}>
    <div class="form-body">
    	<div class="form-group">
            <label class="col-sm-4 control-label">Название</label>
            <div class="col-sm-8">
                {{input name="name" class="form-control" value=service.name}}
            </div>
        </div>                                                
        <div class="form-group">
            <label class="col-sm-4 control-label">Мастера</label>
            <div class="col-sm-8">
            	<select class="select2 form-control" multiple="multiple" name="masters" onchange={{action "selectMaster" value="target.value"}}>
                    {{#each masters as |master|}}
                        <option value="{{master.id}}">{{master.fullname}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">&nbsp;</label>
            <div class="col-sm-8">
                <label class="mt-checkbox">
                    Сделать подуслугой
                    {{input type="checkbox" checked=service.partOfList name="partOfList"}}
                    <span></span>
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">Стоимость</label>
            <div class="col-sm-8">
                {{input name="cost" class="form-control"  value=service.cost}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">Продолжительность</label>
            <div class="col-sm-8">
                {{input name="time" class="form-control"  value=service.time}}
            </div>
        </div>
    </div>
    <div class="form-actions">
        <div class="row">
            <div class="col-sm-offset-4 col-sm-8">
                {{input class="btn btn-success" type="submit" value="Сохранить"}}
                {{#link-to "service.index" class="btn btn-default"}}
                    <i class="fa fa-arrow-left"></i>
                    Назад
                {{/link-to}}
            </div>
        </div>
    </div>
</form>