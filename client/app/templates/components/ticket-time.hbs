<div class="portlet-title">
    <div class="caption">
        <i class="icon-clock font-red-sunglo"></i>
        <span class="caption-subject font-red-sunglo">Время</span>
    </div>
    <div class="actions">
        {{ticket-direction-btn direction="left" elemSelector="#ticket-date" stepSelector="#date-step"}}
        {{ticket-direction-btn direction="right" elemSelector="#ticket-client" stepSelector="#client-step"}}
    </div>
</div>
<div class="portlet-body">
	{{input id="ticket-time-picker" class="timepicker" name="time_input"}}
</div>